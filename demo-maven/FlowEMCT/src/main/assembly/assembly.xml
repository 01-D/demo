<assembly>
	<id>prod</id>
	<formats>
		<format>dir</format>
	</formats>

	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>target/tmp/bin</directory>
			<directoryMode>755</directoryMode>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/tmp/etc</directory>
			<directoryMode>755</directoryMode>
			<outputDirectory>etc</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
	</fileSets>
</assembly>